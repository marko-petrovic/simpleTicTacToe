<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- style for edittext components -->
    <style name="TicTacToeEditTextStyle" parent="@android:style/Widget.EditText">
	    <item name="android:background">@color/gray_lighter_more</item>
	    <item name="android:textColor">@color/gray_dark</item>
	    <item name="android:layout_height">@dimen/editTextHeight</item>
	    <item name="android:paddingLeft">@dimen/editTextPaddingLeftAndRight</item>
	    <item name="android:paddingRight">@dimen/editTextPaddingLeftAndRight</item>
	    <item name="android:textCursorDrawable">@null</item>
	    <item name="android:maxLines">1</item>
	    <item name="android:gravity">center</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:maxLength">10</item>
	</style>
	
    <!-- styles for TextView components -->
    <style name="TicTacToeTextViewStyle" parent="@android:style/Widget.TextView">
	    <item name="android:textColor">@color/gray_dark</item>
	    <item name="android:textSize">13sp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textStyle">normal</item>
	</style>
	
    <style name="TicTacToeTextViewScoreboardListItemStyle" parent="@android:style/Widget.TextView">
	    <item name="android:textColor">@color/gray_dark</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textStyle">normal</item>
	</style>
	
    <style name="TicTacToeTextViewResultsStyle" parent="@android:style/Widget.TextView">
	    <item name="android:textColor">@color/gray_dark</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textStyle">normal</item>
	</style>
    
    <style name="TicTacToeTextViewNameDescriptionsStyle" parent="@android:style/Widget.TextView">
	    <item name="android:textColor">@color/gray_dark</item>
	    <item name="android:textSize">10sp</item>
	    <item name="android:gravity">left</item>
	    <item name="android:textStyle">normal</item>
	</style>
	
    <style name="TicTacToeTextViewSmallStyle" parent="@android:style/Widget.TextView">
	    <item name="android:textColor">@color/gray_dark</item>
	    <item name="android:textSize">11sp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textStyle">normal</item>
	</style>
	
    <!-- style for Button components -->
    <style name="TicTacToeButtonStyle" parent="android:Widget.Button">
        <item name="android:textStyle">normal</item> 
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/gray_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="TicTacToeBoardButtonStyle" parent="android:Widget.Button">
        <item name="android:textStyle">normal</item> 
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/gray_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
